/*************
 Estrutura do site
*************/

* {
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Trebuchet MS', Helvetica, sans-serif;
    background: #fff url(../imagens/fundo.png) repeat-x;
}

#container {
    width: 800px;
    margin: 0 auto;
}

#topo {
    height: 150px;
    background: url(../imagens/detalhe-topo.png) no-repeat right top;
    padding-top: 25px;

}

.logo {
    width: 152px;
    height: 66px;
    background: url(../imagens/logo.png) no-repeat center;
    text-indent: -3000px;
}

/**************
 Barra de navegação
*************/

a:link, a:visited {
    color: #b10333;
    padding: 2px;

}

a:hover {
    color: #e50040;
}

ul {
    margin: 0;
    padding: 0;
    list-style: none;
}

#topo ul {
    background: #b10333;
    margin-top: 30px;
    float: left;
}

#topo ul li {
    float: left;

}

#topo ul a {
    font-size: 0.9em;
    display: block;
    padding: 0.5em 1.5em;
    line-height: 2.1em;
    text-decoration: none;
    color: #fff;
    background: url(../imagens/divisor.png) no-repeat left center;
}

#topo ul .primeiro a {
    background: none;

}

#topo ul a:hover {
    color: #69001d;
}

/*aqui estamos a ir buscar o body qe tem a class home e qe dentro desse body tem um id navegacao e dentro disso tem um link (a) com um id home*/
body.home #navegacao a#home,
body.portugal #navegacao a#portugal,
body.internacional #navegacao a#internacional,
body.economia #navegacao a#economia,
