body.fotos #navegacao a#fotos
{
    color: #fff;
    background: #de003d;
    cursor: text;
}

/*********
Configuração layout de tres colunas
**************/

#conteudo {
    margin-top: 60px;
    background: #f5f5f5;

}

#lateral {
    width: 180px;
    float: left;
    margin: 0 0 20px -750px;
}

/*Quando for utilizado o id de tres colunas no body o espacamento do conteudo primario sera de 270px para poder caber outra coluna de 270px*/


#primario {
    width: 270px;
    float: left;
    margin: 0 0 20px 195px;
}
/*Quando for utilizado o id de duas colunas no body o espacamento do conteudo primario sera de 555px para poder ocupar o conteudo de tres colunas passando assim a duas*/
#duas-colunas #primario {
    width: 555px;
}
/* Quando for utilizado o id uma coluna no body a navegação vai passar a ter so 1 coluna que ocupa neste caso 750px */
#uma-coluna #primario {
    width: 750px;
    margin: 0 0 20px 0;
}



#secundario {
    width: 270px;
    float: left;
    margin: 0 0 20px 15px;
    
}

